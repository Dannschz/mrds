<div class="container p-5">
    <div class="row">
        <div class="col-md-4 offset-md-4">
            <div class="card animate__animated animate__flipInY">
                <div class="card-header bg-dark text-white text-center">
                    <h3>Inicio de Sesion</h3>
                </div>
                <form id="loginForm">
                    <div class="card-body">
                        <h5>Email</h5>
                        <input id="inputEmail" type="email" class="form-control" placeholder="email" name="email"
                            required>
                    </div>
                    <div class="card-body">
                        <h5>Contraseña</h5>
                        <input id="inputPassword" type="password" class="form-control" placeholder="Password"
                            name="password" required>
                    </div>
                    <p style="text-align: center;">Inicia como:</p>
                    <div style="display: flex; justify-content: space-evenly; width: 100%; ">
                        <label for="IEuser">
                            IE
                            <input type="radio" name="user" id="IEuser" value="ie" checked>
                        </label>
                        <label for="Ruser" style="text-align: center;">
                            Restaurante
                            <input type="radio" name="user" id="Ruser" value="res">
                        </label>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary btn-block">
                            Inicia sesión
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

